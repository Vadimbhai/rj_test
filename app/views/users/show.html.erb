<p id="notice"><%= notice %></p>

<h1>
  <%= @user.name %>'s page.
</h1>

<%= form_for @comment, :action => 'create' do |f| %>
    <div>
      <%= f.label 'New comment:' %>
      <%= f.text_area :content %>
    </div>

    <div>
      <%= f.fields_for :user do |ff| %>
        <%= f.hidden_field :id %>
      <% end %>
      <%= f.submit 'Send' %>
    </div>
<% end %>

<p>
  <h3><%= @user.name %>'s comments:</h3>
  <%= render @user.comments %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
